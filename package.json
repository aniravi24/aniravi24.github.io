{
  "name": "nextra-blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "pnpm feed && next build && next-sitemap && touch out/.nojekyll",
    "build-and-deploy": "pnpm run build && pnpm run deploy-website",
    "deploy-website": "gh-pages -d out -t true",
    "dev": "next dev",
    "feed": "node scripts/gen-rss.js",
    "format": "prettier --write .",
    "lint": "next lint",
    "start": "next start"
  },
  "dependencies": {
    "next": "14.2.20",
    "next-sitemap": "4.2.3",
    "nextra": "3.2.5",
    "nextra-theme-blog": "3.2.5",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "rss": "1.2.2",
    "sharp": "0.33.5"
  },
  "devDependencies": {
    "@types/node": "22.10.1",
    "@types/react": "18.3.14",
    "@types/react-dom": "18.3.3",
    "autoprefixer": "10.4.20",
    "eslint": "8.57.1",
    "eslint-config-next": "14.2.20",
    "gh-pages": "6.2.0",
    "gray-matter": "4.0.3",
    "postcss": "8.4.49",
    "prettier": "3.4.2",
    "tailwindcss": "3.4.16",
    "typescript": "5.7.2"
  },
  "packageManager": "pnpm@9.14.4"
}
